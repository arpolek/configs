set title
set laststatus=2
set wildmenu
syntax enable
set encoding=utf-8
set confirm
set history=100
set number

set tabpagemax=50
set noerrorbells
set visualbell
set cursorline

set wrap
set linebreak
set scrolloff=10
set sidescrolloff=5

" Better searching
set ignorecase
set incsearch
set smartcase
set hlsearch

" Indentation
set autoindent
set shiftwidth=4
set softtabstop=4
set expandtab
set shiftround
set smarttab
